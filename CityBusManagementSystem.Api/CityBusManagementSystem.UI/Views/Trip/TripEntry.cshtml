@model CityBusManagement.Entity.Models.Trip

@{
    ViewData["Title"] = "TripEntry";
}

<form method="post" enctype="multipart/form-data">
    <div class="h2">
        TRIP ENTRY
    </div>

    <div class="form-group">
        <label>Trip Count</label>
        <input type="text" asp-for=" tripCount" class="form-control" placeholder="enter trip count " required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div> }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>}
</form>

<div>
    <a asp-controller="Trip" asp-action="Trip">Back to List</a>
</div>
