@model CityBusManagement.Entity.Models.RouteDetails


<form method="post" enctype="multipart/form-data">
    <h2>Update RouteDetails</h2><hr />
    <div class="form-group">
        <div class="form-group">
        <label>Routeno</label>
        <input type="text" asp-for="routeNo" class="form-control" placeholder="Enter routeno" required />
    </div>

        <label>Source</label>
        <input type="text" asp-for="source" class="form-control" placeholder="Enter Source" required />
    </div>
    <div class="form-group">
        <label>Destination</label>
        <input type="text" asp-for="destination" class="form-control" placeholder="Enter destination" required />
    </div>
    

    <input type="submit" value="Update" class="btn btn-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
<div>
    <a asp-controller="RouteDetails" asp-action="RouteDetails">View  List</a>
</div>
